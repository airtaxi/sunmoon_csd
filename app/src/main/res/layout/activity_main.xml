<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.sunmoon.whattoeat.MainActivity">

    <ImageView
        android:id="@+id/image_main_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/sm_1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_main_pic">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="식당을 선택해주세요"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="기숙사 식당" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="교직원 식당" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="학생회관 식당" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="오렌지 식당"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="기타 메뉴"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="랜덤 메뉴 선택기" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
